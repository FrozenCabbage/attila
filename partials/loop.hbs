<div class="extra-pagination">
	{{pagination}}
</div>

{{#foreach posts}}

<article class="{{post_class}}">
	<div class="inner">
		<header class="post-header">
			<h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
			<span class="post-meta">By {{authors separator=", "}} &bull; <time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM, YYYY"}}</time></span>
			<div class="clear"></div>
		</header>

		<section class="post-excerpt">
			<p>{{content words="200"}}</p>
		</section>
		<a href="{{url}}">Read more...</a>
	</div>
</article>

{{/foreach}}

{{pagination}}
